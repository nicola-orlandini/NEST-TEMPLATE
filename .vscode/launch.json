    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Nest App",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceFolder}/src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "restart": true,
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true,
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
        }
    ]
}